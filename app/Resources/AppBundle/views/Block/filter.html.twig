<form action="#" method="post" class="filter-form">
    <input type="hidden" name="url" value="{{ app.request.pathinfo }}">
    <div class="filter-content">
        <div class="filter-content-inner">
            <div class="title">{{ 'frontend.filter.title'|trans([], 'AppBundle') }}</div>

            {% if colours is defined %}
            <div class="filter-block">
                <div class="filter-toggle"><span>{{ 'frontend.filter.colour'|trans([], 'AppBundle') }}</span><i></i></div>
                <div class="filter-podmenu filter-colours">
                    <ul class="filter-podmenu-choose">
                        {% for colour in colours %}
                            <li>
                                <label class="filter-checkbox">
                                    <input type="checkbox" name="colour" {{ is_constrain(colour.id, app.request.get('colour')) }} value="{{ colour.id }}">
                                    <i></i>
                                    <span>
                                        <small class="color" style="background: #{{ colour.colour }}; box-shadow: 1px 0px 6px rgba(0, 0, 0, 0.08);"></small>
                                        {{ colour.name}}
                                    </span>
                                </label>
                            </li>
                        {% endfor %}
                        <li>
                            <a href="" class="btn-filter">{{ 'frontend.filter.apply'|trans([], 'AppBundle') }}</a>
                        </li>
                    </ul>
                </div>
            </div>
            {% endif %}

            {% if stones is defined %}
                <div class="filter-block">
                    <div class="filter-toggle"><span>{{ 'frontend.filter.stones'|trans([], 'AppBundle') }}</span><i></i></div>
                    <div class="filter-podmenu filter-stones">
                        <ul class="filter-podmenu-choose">
                            {% for stone in stones %}
                                <li>
                                    <label class="filter-checkbox">
                                        <input type="checkbox" name="stone" {{ is_constrain(stone.id, app.request.get('stone')) }} value="{{ stone.id }}">
                                        <i></i>
                                        <span>{{ stone.name}}</span>
                                    </label>
                                </li>
                            {% endfor %}
                            <li>
                                <a href="" class="btn-filter">{{ 'frontend.filter.apply'|trans([], 'AppBundle') }}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            {% endif %}

            <div class="filter-block">
                <div class="filter-toggle"><span>{{ 'frontend.filter.price'|trans([], 'AppBundle') }}</span><i></i></div>
                <div class="filter-podmenu with-diapazon">
                    <div class="range-slider-content">
                        <div class="extra-controls">
                            <span class="value-block">
                                <input type="text" class="js-input-from" id="priceFrom" data-min="{{ minPrice }}" value="{{ app.request.get('min_price') ? app.request.get('min_price') : minPrice is defined ? minPrice : 0 }}"/>
                            </span>
                            <span class="divider">-</span>
                            <span class="value-block">
                                 <input type="text" class="js-input-to" id="priceTo" data-max="{{ maxPrice }}"  value="{{ app.request.get('max_price') ? app.request.get('max_price') : maxPrice is defined ? maxPrice : 0 }}"/>
                            </span>
                            <span class="valuta">грн</span>
                        </div>
                        <div class="range-slider">
                            <input type="text" class="js-range-slider" value=""/>
                        </div>
                    </div>
                    <a href="" class="btn-filter mt-40">{{ 'frontend.filter.apply'|trans([], 'AppBundle') }}</a>
                </div>
            </div>

            <div class="catalog-filter-close">
                <img src="{{ asset('bundles/app/images/cross.svg') }}" alt="">
            </div>
        </div>
        <div class="filter-overlay"></div>
    </div>

    <div class="filter-open">{{ 'frontend.filter.title'|trans([], 'AppBundle') }} <i>+</i></div>

    <div class="filter-block select-block">
        <select class="sort-select" name="sort" data-placeholder="{{ 'frontend.filter.sort'|trans([], 'AppBundle') }}">
            <option></option>
            <option value="asc">{{ 'frontend.filter.sorts.default'|trans([], 'AppBundle') }}</option>
            <option value="asc" {{ app.request.get('sort') == 'asc' ? 'selected' : null }}>{{ 'frontend.filter.sorts.price_hight'|trans([], 'AppBundle') }}</option>
            <option value="desc" {{ app.request.get('sort') == 'desc' ? 'selected' : null }}>{{ 'frontend.filter.sorts.price_low'|trans([], 'AppBundle') }}</option>
        </select>
    </div>

</form>
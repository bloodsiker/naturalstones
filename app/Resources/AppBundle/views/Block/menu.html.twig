
{% if (settings['type'] == 'header') %}
    <div class="header-menu-outer header-menu-desctop">
        <div class="title">Меню</div>
        {% if individual|length %}
            <div class="header-menu-block topmenu">
                <div class="type">
                    <div class="type-title">Индивидуальные заказы</div>
                    <ul class="header-menu submenu">
                        {% for iCategory in individual %}
                            <li><a href="{{ path('product_list', { 'slug': iCategory.slug }) }}">{{ iCategory.name}}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endif %}
        {% if main|length %}
            <div class="header-menu-block topmenu">
                <div class="type">
                    <div class="type-title">Украшения</div>

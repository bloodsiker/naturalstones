
<!-- catalog-section -->
<section class="simple-section">
    <div class="container">

        {{
            sonata_block_render(
                { 'type': 'app.block.service.breadcrumb' }
            )
        }}

        <div class="filter-outer">
            <h1>{{ category.name }}</h1>

            {% include 'AppBundle:Block:filter.html.twig' %}
        </div>

        {{
            sonata_block_render(
                { 'type': 'product.block.list' },
                {
                    'items_count' : 20,
                    'page': app.request.get('page') ? app.request.get('page') : 1,
                    'category': category
                }
            )
        }}
    </div>
</section>

<section class="section">
    <div class="container">
        {{
            sonata_block_render(
                { 'type': 'share.block.zodiac' },
                {
                    'title' : 'Камни по знаку зодиака',
                }
            )
        }}
    </div>
</section>
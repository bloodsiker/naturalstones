
<!-- catalog-section -->
<section class="simple-section">
    <div class="container">

        {{
            sonata_block_render(
                { 'type': 'app.block.service.breadcrumb' }
            )
        }}

        {% if category.description %}
            <div class="product-description-container category-description">
                {{ category.description|raw }}
            </div>
        {% endif %}


        {{
            sonata_block_render(
                { 'type': 'product.block.list' },
                {
                    'items_count' : 20,
                    'page': app.request.get('page') ? app.request.get('page') : 1,
                    'filter': true,
                    'title': category.name,
                    'category': category,
                    'show_paginator': true
                }
            )
        }}
    </div>
</section>

<section class="section">
    <div class="container">
        {{
            sonata_block_render(
                { 'type': 'share.block.zodiac' },
                {
                    'title' : 'Камни по знаку зодиака',
                }
            )
        }}
    </div>
</section>

<!-- catalog-section -->
<section class="simple-section">
    <div class="container">

        {{
            sonata_block_render(
                { 'type': 'app.block.service.breadcrumb' }
            )
        }}

        {{
            sonata_block_render(
                { 'type': 'product.block.list' },
                {
                    'items_count' : 20,
                    'page': app.request.get('page') ? app.request.get('page') : 1,
                    'colour': colour,
                    'title': 'frontend.colour'|trans([], 'AppBundle') ~ ': ' ~ colour.name,
                    'show_paginator': true
                }
            )
        }}
    </div>
</section>
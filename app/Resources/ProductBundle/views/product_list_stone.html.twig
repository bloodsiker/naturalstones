
<!-- catalog-section -->
<section class="simple-section">
    <div class="container">

        {{
            sonata_block_render(
                { 'type': 'app.block.service.breadcrumb' }
            )
        }}

        {% if stone.description %}
            <div class="product-description-container">
                {{ stone.description|raw }}
            </div>
        {% endif %}

        <div class="filter-outer">
            <h1>Камень: {{ stone.name }}</h1>

            {% include 'AppBundle:Block:filter.html.twig' %}
        </div>

        {{
            sonata_block_render(
                { 'type': 'product.block.list' },
                {
                    'items_count' : 5,
                    'page': app.request.get('page') ? app.request.get('page') : 1,
                    'stone': stone
                }
            )
        }}
    </div>
</section>
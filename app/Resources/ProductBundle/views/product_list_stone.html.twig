
<!-- catalog-section -->
<section class="simple-section">
    <div class="container">

        {{
            sonata_block_render(
                { 'type': 'app.block.service.breadcrumb' }
            )
        }}

        {% if stone.description %}
            <div class="product-description-container slice-this">
                {{ stone.description|raw }}
            </div>
        {% endif %}

        {{
            sonata_block_render(
                { 'type': 'product.block.list' },
                {
                    'items_count' : 20,
                    'page': app.request.get('page') ? app.request.get('page') : 1,
                    'stone': stone,
                    'title': 'frontend.stone'|trans([], 'AppBundle') ~ ': ' ~ stone.name,
                    'show_paginator': true
                }
            )
        }}
    </div>
</section>